<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:paddingHorizontal="20dp"
    android:layout_marginBottom="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="50dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bgc_image"
            app:civ_border_width="1dp"
            app:civ_border_color="#CFCDC4"/>

        <TextView
            android:id="@+id/main_initLetter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="M"
            android:textColor="#087908"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gokul kumar"
            android:textSize="20sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/main_userLastMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where are you??"
            android:textSize="12sp"
            android:textColor="#5E5E5E"/>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/main_userLastOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1H"
        android:textSize="12sp"
        android:textColor="#5E5E5E"/>

</androidx.appcompat.widget.LinearLayoutCompat>